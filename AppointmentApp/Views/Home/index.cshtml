@model AppointmentApp.Models.Appointment
@{
    ViewData["Title"] = "Book Appointment";
}

<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

<style>
body {
    font-family: 'Roboto', sans-serif;
    background: #f0f2f5;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}
.appointment-container {
    background: #fff;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    width: 100%;
    max-width: 450px;
    text-align: center;
}
.appointment-container h2 {
    font-weight: 700;
    margin-bottom: 30px;
    color: #333;
}
.form-control, select {
    border-radius: 10px;
    padding: 10px 15px;
    font-size: 16px;
    margin-bottom: 15px;
    width: 100%;
}
.btn-primary {
    background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);
    border: none;
    border-radius: 10px;
    padding: 12px;
    font-size: 16px;
    font-weight: 500;
    width: 100%;
    cursor: pointer;
    transition: all 0.3s ease;
}
.btn-primary:hover {
    background: linear-gradient(90deg, #2575fc 0%, #6a11cb 100%);
    transform: translateY(-2px);
}
</style>

<div class="appointment-container">
    <h2>Book Appointment</h2>
    <form asp-action="Index" method="post">
        <input asp-for="Name" class="form-control" placeholder="Full Name" required />
        <input asp-for="Email" type="email" class="form-control" placeholder="Email" required />
        <input asp-for="Phone" class="form-control" placeholder="Phone" required />
        <input asp-for="Date" type="datetime-local" class="form-control" required />

        <select asp-for="Service" class="form-control" required>
            <option value="">Select Service</option>
            <option value="ELECTRICAL WORK">ELECTRICAL WORK</option>
            <option value="PLUMBER SERVICE">PLUMBER SERVICE</option>
            <option value="HOUSE Cleaning">HOUSE Cleaning</option>
            <option value="AC SERVICING">AC SERVICING</option>
        </select>



        <button type="submit" class="btn btn-primary">Book Appointment</button>
    </form>
</div>

